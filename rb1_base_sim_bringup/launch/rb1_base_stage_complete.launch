<?xml version="1.0"?>
<launch>

	<!-- arg to config the launch file-->

	<!--launch_navigation and launch_navigation_nomap args are exclusive
	and they are (or not) launched for all robots-->
	<arg name="launch_rviz" default="true"/>
	<arg name="launch_stage" default="true"/>
	<arg name="world" default="$(find rb1_base_stage)/world/willow-three-rb1-base.world"/>
	<arg name="launch_base_hw_sim" default="true"/>
	<arg name="rviz_config" default="$(find rb1_base_stage)/rviz/rb1_base_stage.rviz"/>


	<!-- arguments robot a -->
	<arg name="id_robot_a" default="rb1_base"/>
	<arg name="launch_robot_a" default="false"/>
	<arg name="map_file_a" default="$(find rb1_base_localization)/maps/willow_garage/willow_garage_stage.yaml"/>
	<arg name="gmapping_robot_a" default="false"/>
	<arg name="move_base_robot_a" default="true"/>
	<arg name="amcl_and_mapserver_a" default="true"/>
	<arg name="map_frame_a" default="$(arg id_robot_a)_map"/>
	<arg name="move_robot_a" default="false"/>
	<arg name="has_elevator_robot_a" default="false"/>
	<arg name="launch_pad_robot_a" default="true"/>
	<arg name="x_init_pose_robot_a" default="0.0"/>
	<arg name="y_init_pose_robot_a" default="0.0"/>
	<arg name="yaw_init_pose_robot_a" default="0.0"/>

	<!-- arguments robot b -->
	<arg name="id_robot_b" default="rb1_base_b"/>
	<arg name="launch_robot_b" default="false"/>
	<arg name="map_file_b" default="$(find rb1_base_localization)/maps/willow_garage/willow_garage_stage.yaml"/>
	<arg name="gmapping_robot_b" default="false"/>
	<arg name="move_base_robot_b" default="true"/>
	<arg name="amcl_and_mapserver_b" default="true"/>
	<arg name="map_frame_b" default="$(arg id_robot_a)_map"/>
  <arg name="move_robot_b" default="false"/>
	<arg name="has_elevator_robot_b" default="false"/>
	<arg name="launch_pad_robot_b" default="false"/>
	<arg name="x_init_pose_robot_b" default="2.0"/>
	<arg name="y_init_pose_robot_b" default="1.0"/>
	<arg name="yaw_init_pose_robot_b" default="0.0"/>


	<!-- arguments robot c -->
	<arg name="id_robot_c" default="rb1_base_c"/>
	<arg name="launch_robot_c" default="false"/>
	<arg name="map_file_c" default="$(find rb1_base_localization)/maps/willow_garage/willow_garage_stage.yaml"/>
	<arg name="gmapping_robot_c" default="false"/>
	<arg name="move_base_robot_c" default="true"/>
	<arg name="amcl_and_mapserver_c" default="true"/>
	<arg name="map_frame_c" default="$(arg id_robot_a)_map"/>
  <arg name="move_robot_c" default="false"/>
	<arg name="has_elevator_robot_c" default="false"/>
	<arg name="launch_pad_robot_c" default="false"/>
	<arg name="x_init_pose_robot_c" default="2.0"/>
	<arg name="y_init_pose_robot_c" default="0.0"/>
	<arg name="yaw_init_pose_robot_c" default="0.0"/>



		<!--BEGIN ROBOT 1-->
		<include if="$(arg launch_robot_a)" file="$(find rb1_base_stage)/launch/rb1_base_one_robot.launch">
			<arg name="id_robot" value="$(arg id_robot_a)"/>
			<arg name="launch_amcl_and_mapserver" value="$(arg amcl_and_mapserver_a)"/>
			<arg name="launch_gmapping" value="$(arg gmapping_robot_a)"/>
			<arg name="map_file" value="$(arg map_file_a)"/>
	 		<arg name="launch_move_base" value="$(arg move_base_robot_a)"/>
			<arg name="global_frame" value="$(arg map_frame_a)"/>
			<arg name="launch_base_hw_sim" value="$(arg launch_base_hw_sim)"/>
			<arg name="has_elevator" value="$(arg has_elevator_robot_a)"/>
			<arg name="launch_move" value="$(arg move_robot_a)"/>
			<arg name="launch_pad" value="$(arg launch_pad_robot_a)"/>
			<arg name="x_init_pose" value="$(arg x_init_pose_robot_a)"/>
			<arg name="y_init_pose" default="$(arg y_init_pose_robot_a)"/>
			<arg name="yaw_init_pose" default="$(arg yaw_init_pose_robot_a)"/>

		</include>

		<include if="$(arg launch_robot_b)" file="$(find rb1_base_stage)/launch/rb1_base_one_robot.launch">
			<arg name="id_robot" value="$(arg id_robot_b)"/>
			<arg name="launch_amcl_and_mapserver" value="$(arg amcl_and_mapserver_b)"/>
			<arg name="launch_gmapping" value="$(arg gmapping_robot_b)"/>
			<arg name="map_file" value="$(arg map_file_b)"/>
	 		<arg name="launch_move_base" value="$(arg move_base_robot_b)"/>
			<arg name="global_frame" value="$(arg map_frame_b)"/>
			<arg name="launch_base_hw_sim" value="$(arg launch_base_hw_sim)"/>
			<arg name="has_elevator" value="$(arg has_elevator_robot_b)"/>
	    <arg name="launch_move" value="$(arg move_robot_b)"/>
			<arg name="launch_pad" value="$(arg launch_pad_robot_b)"/>
			<arg name="x_init_pose" value="$(arg x_init_pose_robot_b)"/>
			<arg name="y_init_pose" default="$(arg y_init_pose_robot_b)"/>
			<arg name="yaw_init_pose" default="$(arg yaw_init_pose_robot_b)"/>
		</include>

		<include if="$(arg launch_robot_c)" file="$(find rb1_base_stage)/launch/rb1_base_one_robot.launch">
			<arg name="id_robot" value="$(arg id_robot_c)"/>
			<arg name="launch_amcl_and_mapserver" value="$(arg amcl_and_mapserver_c)"/>
			<arg name="launch_gmapping" value="$(arg gmapping_robot_c)"/>
			<arg name="map_file" value="$(arg map_file_c)"/>
	 		<arg name="launch_move_base" value="$(arg move_base_robot_c)"/>
			<arg name="global_frame" value="$(arg map_frame_c)"/>
			<arg name="launch_base_hw_sim" value="$(arg launch_base_hw_sim)"/>
			<arg name="has_elevator" value="$(arg has_elevator_robot_c)"/>
	    <arg name="launch_move" value="$(arg move_robot_c)"/>
			<arg name="launch_pad" value="$(arg launch_pad_robot_c)"/>
			<arg name="x_init_pose" value="$(arg x_init_pose_robot_c)"/>
			<arg name="y_init_pose" default="$(arg y_init_pose_robot_c)"/>
			<arg name="yaw_init_pose" default="$(arg yaw_init_pose_robot_c)"/>
		</include>

		<!-- stage simulation and rviz visualization-->
		<include if="$(arg launch_stage)" file="$(find rb1_base_stage)/launch/stage.launch">
			<arg name="world" value="$(arg world)"/>
		</include>
		<node if="$(arg launch_rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)" required="true"/>


</launch>
